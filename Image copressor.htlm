    <script>
        // DOM Elements
        const uploadArea = document.getElementById('uploadArea');
        const uploadBtn = document.getElementById('uploadBtn');
        const fileInput = document.getElementById('fileInput');
        const qualitySlider = document.getElementById('qualitySlider');
        const qualityValue = document.getElementById('qualityValue');
        const formatOptions = document.querySelectorAll('.format-option');
        const previewSection = document.getElementById('previewSection');
        const originalPreview = document.getElementById('originalPreview');
        const compressedPreview = document.getElementById('compressedPreview');
        const originalInfo = document.getElementById('originalInfo');
        const compressedInfo = document.getElementById('compressedInfo');
        const originalSize = document.getElementById('originalSize');
        const compressedSize = document.getElementById('compressedSize');
        const sizeReduction = document.getElementById('sizeReduction');
        const compressionRatio = document.getElementById('compressionRatio');
        const downloadBtn = document.getElementById('downloadBtn');
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const navMenu = document.getElementById('navMenu');

        // Global variables
        let originalImage = null;
        let originalFileSize = 0;
        let compressedBlob = null;
        let selectedFormat = 'jpeg';
        let compressionQuality = 0.7;

        // Event Listeners
        uploadArea.addEventListener('click', () => fileInput.click());
        uploadBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleImageUpload);
        qualitySlider.addEventListener('input', updateCompression);
        downloadBtn.addEventListener('click', downloadCompressedImage);
        mobileMenuBtn.addEventListener('click', toggleMobileMenu);

        // Format selection
        formatOptions.forEach(option => {
            option.addEventListener('click', () => {
                formatOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
                selectedFormat = option.dataset.format;
                if (originalImage) updateCompression();
            });
        });

        // Handle image upload
        function handleImageUpload(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            if (!file.type.match('image/jpeg') && !file.type.match('image/png') && !file.type.match('image/webp')) {
                alert('Please upload a valid image file (JPEG, PNG, or WebP).');
                return;
            }
            
            if (file.size > 10 * 1024 * 1024) {
                alert('File size should be less than 10MB.');
                return;
            }
            
            originalFileSize = file.size;
            originalSize.textContent = formatFileSize(file.size);
            
            const reader = new FileReader();
            reader.onload = function(e) {
                originalImage = new Image();
                originalImage.onload = function() {
                    originalPreview.src = e.target.result;
                    originalInfo.textContent = `${originalImage.width} × ${originalImage.height} pixels`;
                    previewSection.style.display = 'block';
                    updateCompression();
                };
                originalImage.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }

        // Update compression based on settings
        function updateCompression() {
            if (!originalImage) return;
            
            compressionQuality = qualitySlider.value / 100;
            qualityValue.textContent = `${qualitySlider.value}%`;
            
            // Create canvas for compression
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            
            // Calculate dimensions (maintain aspect ratio)
            let width = originalImage.width;
            let height = originalImage.height;
            
            // For demonstration, we'll limit the size for very large images
            const maxDimension = 2000;
            if (width > maxDimension || height > maxDimension) {
                if (width > height) {
                    height = (maxDimension / width) * height;
                    width = maxDimension;
                } else {
                    width = (maxDimension / height) * width;
                    height = maxDimension;
                }
            }
            
            canvas.width = width;
            canvas.height = height;
            
            // Draw image on canvas
            ctx.drawImage(originalImage, 0, 0, width, height);
            
            // Get compressed data URL
            let mimeType = 'image/jpeg';
            if (selectedFormat === 'png') mimeType = 'image/png';
            if (selectedFormat === 'webp') mimeType = 'image/webp';
            
            const dataURL = canvas.toDataURL(mimeType, compressionQuality);
            compressedPreview.src = dataURL;
            
            // Calculate compressed size
            const compressedDataSize = Math.round((dataURL.length * 3) / 4); // Approximate byte size
            compressedSize.textContent = formatFileSize(compressedDataSize);
            
            // Calculate reduction percentage
            const reduction = ((originalFileSize - compressedDataSize) / originalFileSize * 100).toFixed(1);
            sizeReduction.textContent = `${reduction}%`;
            
            // Calculate compression ratio
            const ratio = (originalFileSize / compressedDataSize).toFixed(1);
            compressionRatio.textContent = `${ratio}:1`;
            
            // Store compressed blob for download
            dataURLtoBlob(dataURL).then(blob => {
                compressedBlob = blob;
                compressedInfo.textContent = `${width} × ${height} pixels`;
            });
        }

        // Convert data URL to Blob
        function dataURLtoBlob(dataURL) {
            return new Promise((resolve) => {
                const byteString = atob(dataURL.split(',')[1]);
                const mimeString = dataURL.split(',')[0].split(':')[1].split(';')[0];
                const ab = new ArrayBuffer(byteString.length);
                const ia = new Uint8Array(ab);
                
                for (let i = 0; i < byteString.length; i++) {
                    ia[i] = byteString.charCodeAt(i);
                }
                
                resolve(new Blob([ab], {type: mimeString}));
            });
        }

        // Download compressed image
        function downloadCompressedImage() {
            if (!compressedBlob) {
                alert('Please upload and compress an image first.');
                return;
            }
            
            const url = URL.createObjectURL(compressedBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `compressed-image.${selectedFormat}`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
        }

        // Format file size for display
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Mobile menu toggle
        function toggleMobileMenu() {
            navMenu.style.display = navMenu.style.display === 'flex' ? 'none' : 'flex';
        }

        // Initialize tool with sample images for demonstration
        window.addEventListener('DOMContentLoaded', () => {
            // For demo purposes, we could preload a sample image
            // In a real implementation, you would remove this
